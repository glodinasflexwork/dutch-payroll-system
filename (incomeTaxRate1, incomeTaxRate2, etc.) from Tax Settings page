[32m+[m
[32m+[m[32m    return NextResponse.json({[m
[32m+[m[32m      success: true,[m
[32m+[m[32m      data: loonJournalData[m
[32m+[m[32m    })[m
[32m+[m
[32m+[m[32m  } catch (error) {[m
[32m+[m[32m    console.error("Error generating Loon Journal:", error)[m
[32m+[m[32m    return NextResponse.json({[m
